<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bubbles_first_window">

    <TextView
        android:id="@+id/spiice"
        style="@style/Spiice_style"
        android:layout_width="270dp"
        android:layout_height="126dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="218dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="466dp"
        android:text="@string/spiice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_spiice"
        style="@style/Button_style"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="602dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="156dp"
        android:text="@string/discover_the_platform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/go_to_login"
        style="@style/Text_down_style"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="694dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="98dp"
        android:text="@string/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>