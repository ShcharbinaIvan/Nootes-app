<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bubbles_sign_log">

    <ImageView
        style="@style/Image_back_style"
        android:layout_width="@dimen/dp_344"
        android:layout_height="@dimen/dp_264"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_88"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_460"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_container_log"
        android:layout_width="@dimen/dp_296"
        android:layout_height="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_170"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_572"
        app:helperText="Required"
        app:helperTextTextColor="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_edit_text_log"
            style="@style/EditText_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:lines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_container_log"
        android:layout_width="@dimen/dp_296"
        android:layout_height="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_264"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_496"
        app:counterEnabled="true"
        app:counterMaxLength="16"
        app:helperText="Required"
        app:helperTextTextColor="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edit_text_log"
            style="@style/EditText_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:lines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        style="@style/Text_up_style"
        android:layout_width="@dimen/dp_82"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_148"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_marginEnd="@dimen/dp_146"
        android:layout_marginBottom="@dimen/dp_656"
        android:text="@string/log_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_log_in"
        style="@style/Button_style"
        android:layout_width="@dimen/dp_264"
        android:layout_height="@dimen/dp_54"
        android:layout_marginStart="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_602"
        android:layout_marginEnd="@dimen/dp_56"
        android:layout_marginBottom="@dimen/dp_156"
        android:text="@string/log_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/return_to_sign_up_text_view"
        style="@style/Text_down_style"
        android:layout_width="@dimen/dp_148"
        android:layout_height="@dimen/dp_26"
        android:layout_marginStart="@dimen/dp_68"
        android:layout_marginTop="@dimen/dp_68"
        android:layout_marginEnd="@dimen/dp_68"
        android:layout_marginBottom="@dimen/dp_98"
        android:text="@string/return_to_sign_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>