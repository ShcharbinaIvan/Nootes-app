<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_text_view"
        style="@style/Add_notes_up_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/title" />

    <TextView
        android:id="@+id/date_text_view"
        style="@style/Notes_screen_text"
        android:layout_width="@dimen/dp_114"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_288"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_30"
        android:text="@string/title" />

    <TextView
        android:id="@+id/message_text_view"
        style="@style/Notes_screen_text"
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_46"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:text="@string/title" />

    <ImageView
        android:id="@+id/to_do_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_370"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginEnd="@dimen/dp_16"
        android:src="@drawable/icon_notes" />

</FrameLayout>